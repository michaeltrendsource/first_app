%h1 Listing users
%table
  %tr
    %th
      Name
    %th{colspan: 2}
      Email
  -@users.each do |user|
    %tr
      %td 
        = user.name
      %td{colspan: 2}
        = user.email
    %tr
      %td
        = link_to 'Show', user
      %td
        = link_to 'Edit', edit_user_path(user)
      %td
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method =>  :delete
%br
= link_to 'New User', new_user_path
%br