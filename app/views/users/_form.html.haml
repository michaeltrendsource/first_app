= form_for(@user) do |f|
  -if @user.errors.any?
  #error_explanation
    %h2
    = pluralize(@user.errors.count, "error")
      prohibited this user from being saved
      
      = @user.errors.full_messages.each do |msg|
        %ul
          %li
            = msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email
  .actions
    = f.submit